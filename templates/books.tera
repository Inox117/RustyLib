{% extends "base" %}

{% block content %}
<h1>Bookshelves</h1>
<p>
    <table>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
        </tr>
        {% for book in books %}
        <tr>
            <td>{{book.id}}</td>
            <td>{{book.title}}</td>
            <td>{{book.author}}</td>
        </tr>
        {% endfor %}
</table>
</p>
{% endblock content %} 